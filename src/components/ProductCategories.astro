---
import { getCategories } from '@/data/data'
// import { ArrowRight } from 'lucide-static' // or import an inline SVG icon
const categories = await getCategories()
---

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
  {categories.map(category => (
    <div class="group overflow-hidden border rounded-lg shadow-sm bg-white dark:bg-gray-900 transition-all reveal">
      <div class="relative h-[200px] w-full overflow-hidden">
        <img 
          src={category.image} 
          alt={category.name} 
          class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
          loading="lazy"
        />
        <div class="absolute inset-0 bg-gradient-to-b from-transparent to-black/60"></div>
        <h3 class="absolute bottom-4 left-4 right-4 text-xl font-bold text-white z-10">
          {category.name}
        </h3>
      </div>

      <div class="p-6 pt-4">
        <p class="text-sm text-gray-600 dark:text-gray-300 line-clamp-3">
          {category.description}
        </p>
      </div>

      <div class="px-6 pb-6 mt-auto">
        <a href={`/products/${category.slug}`} class="inline-flex items-center justify-center w-full px-4 py-2 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 rounded-md transition">
          View Range
          {/* <ArrowRight class="ml-2 h-4 w-4" /> */}
        </a>
      </div>
    </div>
  ))}
</div>
