---
// You can replace these with actual Astro components if needed.
// import { Shield, Zap, Award, HeartPulse, ArrowRight } from 'lucide-react';

import { ShieldIcon } from "@/components/Icons";
import { Icon } from 'astro-icon/components'
---

<section class="relative bg-gradient-to-br from-blue-900 to-black py-20 overflow-hidden">
  <div class="absolute inset-0 opacity-20">
    <div class="absolute inset-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:14px_24px]"></div>
  </div>
  <div class="absolute right-0 -bottom-4 w-2/3 h-2/3 bg-blue-500 rounded-full filter blur-[160px] opacity-20"></div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center reveal">
      
      <!-- Text Section -->
      <div class="space-y-8">
        <div>
          <span class="inline-block mb-4 px-3 py-1 text-sm font-medium bg-blue-600/20 text-blue-100 rounded">
            Uninterrupted Power Solutions
          </span>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white leading-tight">
            Protect What <span class="text-blue-400">Powers</span> Your Business
          </h1>
          <p class="mt-6 text-lg text-blue-100 max-w-lg">
            From critical infrastructure to home electronics, our UPS systems ensure your power never fails when you need it most.
          </p>
        </div>

        <!-- Buttons -->
        <div class="flex flex-wrap gap-4 items-center justify-between">
            
            <a
                href="/#contact"
                class="inline-flex items-center px-6 py-3 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition"
            >
                Contact Us
            </a>
            <p class=""> <span class="text-white text-2xl bg-blue-600/20 rounded p-2">OEM/ODM</span> <span class="text-white text-base">UPS solutions</span></p>
        </div>

        <!-- Features -->
        <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 pt-4">
          <div class="flex flex-col items-center text-center p-2">
            <Icon name="material-symbols:safety-check" class="w-10 h-10 text-blue-400 mb-2" />
            <span class="text-sm text-blue-100">High Protection</span>
          </div>
          <div class="flex flex-col items-center text-center p-2">
            <!-- <Zap class="h-8 w-8 text-blue-300 mb-2" /> -->
            <Icon name="material-symbols:azm" class="w-10 h-10 text-blue-400 mb-2"/>
            <span class="text-sm text-blue-100">Energy Efficient</span>
          </div>
          <div class="flex flex-col items-center text-center p-2">
            <Icon name="mdi:medal" class="w-10 h-10 text-blue-400 mb-2"/>
            <span class="text-sm text-blue-100">Award-Winning</span>
          </div>
          <div class="flex flex-col items-center text-center p-2">
            <Icon name="mdi:heart-pulse" class="w-10 h-10 text-blue-400 mb-2" />
            <span class="text-sm text-blue-100">2-Year Warranty</span>
          </div>
        </div>
      </div>

      <!-- Image Section -->
      <div class="relative h-[400px] lg:h-[500px] rounded-lg overflow-hidden shadow-xl">
        <img
          src="https://images.pexels.com/photos/442151/pexels-photo-442151.jpeg?auto=compress&cs=tinysrgb&w=1200"
          alt="PowerShield UPS System"
          class="w-full h-full object-cover rounded-lg transition-transform duration-700 hover:scale-105"
        />
      </div>
    </div>
  </div>
</section>
