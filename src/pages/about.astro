---
import Layout from '@/layouts/Layout.astro';
import Accordion from '@/components/Accordion.astro';

// FAQ items for the accordion
const faqItems = [
  {
    title: "What is your company’s mission?",
    content: "Our mission is to make the world a better place by providing innovative solutions that empower communities and protect the environment."
  },
  {
    title: "How long have you been in business?",
    content: "We’ve been in business since 2015, serving customers worldwide with dedication and passion."
  },
  {
    title: "Where are you located?",
    content: "We’re headquartered in San Francisco, CA, with remote teams across the globe."
  }
];

// Team members data
const teamMembers = [
  { name: "Jane Doe", role: "CEO", image: "https://placehold.co/150" },
  { name: "John Smith", role: "CTO", image: "https://placehold.co/150" },
  { name: "Emily Johnson", role: "Lead Designer", image: "https://placehold.co/150" },
];

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout>

     <!-- Hero Section -->
     <section class="bg-gray-100 py-16 text-center">
        <h2 class="text-4xl font-bold mb-4">About Us</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          We’re a passionate team dedicated to making a positive impact on the world through innovation, sustainability, and community engagement.
        </p>
      </section>


          <!-- Mission Section -->
    <section class="py-16 px-4">
        <div class="max-w-5xl mx-auto flex flex-col md:flex-row items-center">
          <div class="md:w-1/2 mb-8 md:mb-0">
            <img
              src="https://www.placehold.co/500x300"
              alt="Our Mission"
              class="w-full rounded-lg shadow-lg"
            />
          </div>
          <div class="md:w-1/2 md:pl-8">
            <h3 class="text-3xl font-bold mb-4">Our Mission</h3>
            <p class="text-gray-700 mb-4">
              At My Site, our mission is to empower individuals and communities by providing innovative solutions that address global challenges. We focus on sustainability, education, and technology to create a better future for all.
            </p>
            <p class="text-gray-700">
              Since our founding in 2015, we’ve worked tirelessly to uphold our values of integrity, innovation, and impact. Join us on our journey to make the world a better place!
            </p>
          </div>
        </div>
      </section>

      <!-- Team Section -->
    <section class="bg-gray-300 py-16 px-4">
        <div class="max-w-5xl mx-auto">
          <h3 class="text-3xl font-bold text-center mb-12">Meet Our Team</h3>
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
            {teamMembers.map((member) => (
              <div class="text-center">
                <img
                  src={member.image}
                  alt={member.name}
                  class="w-32 h-32 rounded-full mx-auto mb-4"
                />
                <h4 class="text-xl font-semibold">{member.name}</h4>
                <p class="text-gray-600">{member.role}</p>
              </div>
            ))}
          </div>
        </div>
      </section>
  
      <!-- FAQ Section -->
      <section class="py-16 px-4 bg-gray-50 my-8">
        <div class="max-w-5xl mx-auto">
          <h3 class="text-3xl font-bold text-center mb-12">Frequently Asked Questions</h3>
          <Accordion items={faqItems} />
        </div>
      </section>
  
      <!-- Call to Action Section -->
      <section class="bg-blue-600 text-white py-16 text-center">
        <h3 class="text-3xl font-bold mb-4">Ready to Join Us?</h3>
        <p class="text-lg mb-6">
          Let’s work together to create a brighter future. Get in touch with us today!
        </p>
        <a
          href="/contact"
          class="inline-block bg-white text-blue-600 font-semibold py-3 px-6 rounded-lg hover:bg-gray-200 transition"
        >
          Contact Us
        </a>
      </section>
	
</Layout>
