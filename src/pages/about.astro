---
import Layout from '@/layouts/Layout.astro';
import Accordion from '@/components/Accordion.astro';

// FAQ items for the accordion
const faqItems = [
  {
    title: "What is your company’s mission?",
    content: "Our mission is to make the world a better place by providing innovative solutions that empower communities and protect the environment."
  },
  {
    title: "How long have you been in business?",
    content: "We’ve been in business since 2015, serving customers worldwide with dedication and passion."
  },
  {
    title: "Where are you located?",
    content: "We’re headquartered in San Francisco, CA, with remote teams across the globe."
  }
];

// Team members data
const teamMembers = [
  { name: "Jane Doe", role: "CEO", image: "https://placehold.co/150" },
  { name: "John Smith", role: "CTO", image: "https://placehold.co/150" },
  { name: "Emily Johnson", role: "Lead Designer", image: "https://placehold.co/150" },
];

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout pageWrapClass="p-0">

     <!-- Hero Section -->
     <section class="bg-gray-100 py-16 text-center">
        <h2 class="text-4xl font-bold mb-4">About Us</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          We’re a passionate team dedicated to making a positive impact on the world through innovation, sustainability, and community engagement.
        </p>
      </section>

      <section class="bg-white dark:bg-gray-900">
        <div class="grid max-w-screen-xl px-4 py-16 mx-auto lg:gap-8 xl:gap-0 lg:py-24 lg:grid-cols-12">
          <div class="mr-auto place-self-center lg:col-span-7">
            <h1 class="max-w-2xl mb-4 text-4xl font-extrabold tracking-tight leading-none md:text-5xl xl:text-6xl dark:text-white">
              Empower your business with modern tools
            </h1>
            <p class="max-w-2xl mb-6 font-light text-gray-500 lg:mb-8 md:text-lg lg:text-xl dark:text-gray-400">
              Flowbite helps you build websites faster with a collection of responsive and accessible UI components built with Tailwind CSS.
            </p>
            <a href="#" class="inline-flex items-center justify-center px-5 py-3 mr-3 text-base font-medium text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 dark:focus:ring-blue-900">
              Get started
              <svg class="w-5 h-5 ml-2 -mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a1 1 0 01-.707-1.707L13.586 12H3a1 1 0 110-2h10.586l-4.293-4.293A1 1 0 1111.707 4.293l6 6a1 1 0 010 1.414l-6 6A1 1 0 0110 18z" clip-rule="evenodd" />
              </svg>
            </a>
            <a href="#" class="inline-flex items-center justify-center px-5 py-3 text-base font-medium text-gray-900 border border-gray-300 rounded-lg hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 dark:text-white dark:border-gray-700 dark:hover:bg-gray-700 dark:focus:ring-gray-800">
              Learn more
            </a>
          </div>
          <div class="hidden lg:mt-0 lg:col-span-5 lg:flex">
            <img src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/hero/phone-mockup.png" alt="mockup">
          </div>
        </div>
      </section>
      


          <!-- Mission Section -->
    <section class="py-16 px-4">
        <div class="max-w-5xl mx-auto flex flex-col md:flex-row items-center">
          <div class="md:w-1/2 mb-8 md:mb-0">
            <img
              src="https://www.placehold.co/500x300"
              alt="Our Mission"
              class="w-full rounded-lg shadow-lg"
            />
          </div>
          <div class="md:w-1/2 md:pl-8">
            <h3 class="text-3xl font-bold mb-4">Our Mission</h3>
            <p class="text-gray-700 mb-4">
              At My Site, our mission is to empower individuals and communities by providing innovative solutions that address global challenges. We focus on sustainability, education, and technology to create a better future for all.
            </p>
            <p class="text-gray-700">
              Since our founding in 2015, we’ve worked tirelessly to uphold our values of integrity, innovation, and impact. Join us on our journey to make the world a better place!
            </p>
          </div>
        </div>
      </section>

      <!-- Team Section -->
    <section class="bg-gray-300 py-16 px-4">
        <div class="max-w-5xl mx-auto">
          <h3 class="text-3xl font-bold text-center mb-12">Meet Our Team</h3>
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
            {teamMembers.map((member) => (
              <div class="text-center">
                <img
                  src={member.image}
                  alt={member.name}
                  class="w-32 h-32 rounded-full mx-auto mb-4"
                />
                <h4 class="text-xl font-semibold">{member.name}</h4>
                <p class="text-gray-600">{member.role}</p>
              </div>
            ))}
          </div>
        </div>
      </section>
  
      <!-- FAQ Section -->
      <section class="py-16 px-4 bg-gray-50 mt-8">
        <div class="max-w-5xl mx-auto">
          <h3 class="text-3xl font-bold text-center mb-12">Frequently Asked Questions</h3>
          <Accordion items={faqItems} />
        </div>
      </section>
  
      <!-- Call to Action Section -->
      <section class="bg-blue-600 text-white py-16 text-center">
        <h3 class="text-3xl font-bold mb-4">Ready to Join Us?</h3>
        <p class="text-lg mb-6">
          Let’s work together to create a brighter future. Get in touch with us today!
        </p>
        <a
          href="/contact"
          class="inline-block bg-white text-blue-600 font-semibold py-3 px-6 rounded-lg hover:bg-gray-200 transition"
        >
          Contact Us
        </a>
      </section>
	
</Layout>
